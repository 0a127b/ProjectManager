@model IEnumerable<ProjectManager.Models.Project>
@{
    ViewData["Title"] = "Projects - Index";
}

<h1>Projects</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Create New Project
    </a>
</p>

<table class="table table-dark table-striped align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Category</th>
            <th>Owner (User)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Id</td>
                <td>@project.Title</td>
                <td>@project.Category?.Name</td>
                <td>@project.User?.UserName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-secondary" title="Details">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning" title="Edit">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger" title="Delete">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
