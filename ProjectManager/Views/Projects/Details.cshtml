@model ProjectManager.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<h2>Project Details</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@(Model.Category != null ? Model.Category.Name : "No Category")</dd>

        <dt class="col-sm-2">Owner</dt>
        <dd class="col-sm-10">@(Model.User != null ? Model.User.Email : "Unknown")</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
</div>
