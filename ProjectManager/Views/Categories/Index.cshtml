@model IEnumerable<ProjectManager.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Create New Category
        </a>
    }
</p>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cat.Id" class="btn btn-sm btn-secondary" title="Details">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-warning" title="Edit">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-sm btn-danger" title="Delete">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
