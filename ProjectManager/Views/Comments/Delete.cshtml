@model ProjectManager.Models.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<h2>Delete Comment</h2>

<h4>Are you sure you want to delete this comment?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Content</dt>
    <dd class="col-sm-10">@Model.Content</dd>

    <dt class="col-sm-2">Project</dt>
    <dd class="col-sm-10">@Model.Project?.Title</dd>

    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.User?.UserName</dd>

    <dt class="col-sm-2">Created At</dt>
    <dd class="col-sm-10">@Model.CreatedAt</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fa-solid fa-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Cancel
    </a>
</form>
