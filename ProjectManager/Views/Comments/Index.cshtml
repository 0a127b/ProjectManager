@model IEnumerable<ProjectManager.Models.Comment>

@{
    ViewData["Title"] = "Comments";
}

<h1>Comments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Add New Comment
    </a>
</p>

<table class="table table-dark table-striped align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Content</th>
            <th>Project</th>
            <th>User</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Id</td>
                <td>@comment.Content</td>
                <td>@comment.Project?.Title</td>
                <td>@comment.User?.UserName</td>
                <td>@comment.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@comment.Id" class="btn btn-sm btn-secondary" title="Details">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@comment.Id" class="btn btn-sm btn-warning" title="Edit">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@comment.Id" class="btn btn-sm btn-danger" title="Delete">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
